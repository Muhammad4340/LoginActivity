<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91F28F"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/usernameTxt"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_square"
        android:hint="Username"
        android:importantForAutofill="no"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="374dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="298dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_square"
        android:hint="@string/password"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="419dp"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/imageKos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:alpha=".3"
        android:scaleX="4"
        android:scaleY="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/username"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@+id/usernameTxt"
        app:srcCompat="@mipmap/ic_username"
        tools:layout_editor_absoluteX="297dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_marginTop="300dp"
        android:alpha=".3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/LOGO"
        app:srcCompat="@mipmap/ic_background_foreground"
        android:contentDescription="@string/background" />

    <ImageView
        android:id="@+id/copyright"
        android:layout_width="48dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/textHakMilik"
        app:srcCompat="@mipmap/ic_copyright_foreground"
        tools:layout_editor_absoluteY="637dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/copyright" />

    <ImageView
        android:id="@+id/LOGO"
        android:layout_width="376dp"
        android:layout_height="442dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_logo_foreground"
        tools:ignore="MissingConstraints"
        android:contentDescription="@string/todo" />

    <EditText
        android:id="@+id/textHakMilik"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="text"
        android:text="Properti ini merupakan hak cipta dari SMT"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@+id/background"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="104dp" />

    <ImageView
        android:id="@+id/imageViewKunciPass"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:rotation="-66"
        android:rotationY="-4"
        app:layout_constraintTop_toBottomOf="@+id/usernameTxt"
        app:srcCompat="@mipmap/ic_key_foreground"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="297dp"
        android:contentDescription="@string/KunciPass" />

</androidx.constraintlayout.widget.ConstraintLayout>