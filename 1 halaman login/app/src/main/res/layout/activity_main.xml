<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91F28F"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/username"
        android:layout_width="298dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_square"
        android:hint="Username"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="370dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="298dp"
        android:layout_height="39dp"
        android:background="@drawable/edittext_square"
        android:hint="Password"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="419dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:alpha=".3"
        android:scaleX="4"
        android:scaleY="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/username"
        android:layout_width="30dp"
        android:layout_height="35dp"
        app:srcCompat="@mipmap/ic_username"
        tools:layout_editor_absoluteX="306dp"
        tools:layout_editor_absoluteY="370dp" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:alpha=".3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_background_foreground"
        tools:layout_editor_absoluteY="284dp" />

    <ImageView
        android:id="@+id/copyright"
        android:layout_width="48dp"
        android:layout_height="56dp"
        app:srcCompat="@mipmap/ic_copyright_foreground"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="613dp" />

    <ImageView
        android:id="@+id/LOGO"
        android:layout_width="376dp"
        android:layout_height="442dp"
        app:srcCompat="@mipmap/ic_logo_foreground"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-33dp" />

    <EditText
        android:id="@+id/textHakMilik"
        android:layout_width="220dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="text"
        android:text="Properti ini merupakan hak cipta dari SMT"
        android:textSize="11"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="622dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="39dp"
        android:layout_height="47dp"
        android:rotation="-66"
        android:rotationY="-4"
        app:srcCompat="@mipmap/ic_key_foreground"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="419dp" />

</androidx.constraintlayout.widget.ConstraintLayout>